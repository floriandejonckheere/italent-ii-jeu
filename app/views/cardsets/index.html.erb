<%= link_to new_cardset_path, :class => "btn btn-fab btn-raised btn-material-blue btn-navbar" do %>
  <i class="mdi-content-add text-white"></i>
<% end %>

<div class="row">
  <div class="col-lg-8 col-lg-offset-2">
    <% if Category.all.size == 0 %>
    <div class="alert alert-warning">
        <h4><%= t('title_nocategories') %></h4>
        <p><%= t('text_nocategories') %> <strong><%= link_to t('link_nocategories'), new_category_path %></strong></p>
    </div>
    <% end %>
    <% if Cardset.all.size != 0 %>
    <div class="row">
      <% Cardset.all.each do |cardset| %>
        <div class="col-lg-6">
          <div class="well well-xl">
            <ul class="nav nav-tabs panel-actions">
              <li data-toggle="tooltip" data-placement="bottom" title="<%= t('action_edit') %>">
                <%= link_to edit_cardset_path(cardset) do %>
                <i class="mdi-content-create text-muted"></i>
                <% end %>
              </li>
              <li data-toggle="tooltip" data-placement="bottom" title="<%= t('action_delete') %>">
                <%= link_to cardset_path(cardset),
                      method: :delete,
                      data: { confirm: t('text_confirmdelete') } do %>
                <i class="mdi-action-delete text-muted"></i>
                <% end %>
              </li>
            </ul>
            <div class="panel-body text-center">
              <h4><%= link_to cardset.title, cardset_path(cardset) %></h4>
              <small><em><%= cardset.cards.size %> <%= :cards %></em></small>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <% else %>
    <div class="alert alert-warning">
      <h4><%= t('title_nocardsets') %></h4>
      <p><%= t('text_nocardsets') %> <strong><%= link_to t('link_nocardsets'), new_cardset_path %></strong></p>
    </div>
    <% end %>
  </div>
</div>
